<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.write.WriteActivity">

    <data>

        <variable
            name="viewModel"
            type="com.ssongjem.inmotion.ui.write.WriteViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <Button
                android:id="@+id/btn_write_record"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:onClick="@{() -> viewModel.record()}"
                android:text="Voice Record" />

            <TextView
                android:id="@+id/tv_write_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음성인식 결과"
                android:layout_below="@+id/btn_write_record"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                />

        </RelativeLayout>

    </RelativeLayout>
</layout>
